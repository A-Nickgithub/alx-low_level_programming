CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $^

$(OBJ): $(SRC)
	$(CC) -c $(CFLAGS) $^

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all

ifneq ($(wildcard m.h),m.h)
	$(error m.h not found)
endif
